---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Manuel Espinosa | Portfolio",
	description = "Portfolio digital de Manuel Espinosa. Desarrollador web especializado en crear experiencias digitales minimalistas y funcionales.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="author" content="Manuel Espinosa" />

		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title}</title>
	</head>
	<body
		class="min-h-screen bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 transition-colors antialiased"
	>
		<slot />
	</body>
</html>
