---
import ThemeToggle from "@/components/ThemeToggle.astro";
---

<header
    class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-950/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800"
>
    <nav
        class="max-w-6xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between"
    >
        <!-- Logo/Nombre -->
        <a
            href="#hero"
            class="text-lg font-light hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
        >
            ME
        </a>

        <!-- Navegación Desktop -->
        <ul class="hidden md:flex items-center gap-8 text-sm">
            <li>
                <a
                    href="#proyectos"
                    class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Proyectos
                </a>
            </li>
            <li>
                <a
                    href="#experiencia"
                    class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Experiencia
                </a>
            </li>
            <li>
                <a
                    href="#contacto"
                    class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Contacto
                </a>
            </li>
        </ul>

        <!-- Theme Toggle + Menu Mobile -->
        <div class="flex items-center gap-4">
            <ThemeToggle />

            <!-- Botón menú móvil -->
            <button
                id="mobile-menu-button"
                class="md:hidden p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors"
                aria-label="Abrir menú"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Menú móvil -->
    <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950"
    >
        <ul class="px-4 py-6 space-y-4">
            <li>
                <a
                    href="#proyectos"
                    class="block py-2 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Proyectos
                </a>
            </li>
            <li>
                <a
                    href="#experiencia"
                    class="block py-2 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Experiencia
                </a>
            </li>
            <li>
                <a
                    href="#contacto"
                    class="block py-2 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
                >
                    Contacto
                </a>
            </li>
        </ul>
    </div>
</header>

<script>
    // Toggle menú móvil
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");

    button?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
    });

    // Cerrar menú al hacer clic en un link
    const mobileLinks = menu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            menu?.classList.add("hidden");
        });
    });
</script>
